#include <iostream>  
#include <cstdlib>  
#include <ctime>
int main() {    
    srand(time(0));  
    int n;  
    std::cout << "Enter the size of the array: ";  
    std::cin >> n;  
    double* arr = new double[n]; 
    for(int i = 0; i < n; i++) {  
        arr[i] = i + 1;  
    }  
    for(int i = 0; i < n; i++) {  
        std::swap(arr[i], arr[rand() % n]);  
    }  
    double sum = 0;  
    for(int i = 0; i < n; i++) {  
        sum += arr[i];  
    }
    std::cout << "The sum of the array elements: " << sum << std::endl;  
    delete[] arr;  
}