#include <iostream>
#include <ctime>
#include <cstdlib>
#include <vector>
using namespace std;
int main () {
    srand (time(0));
    int size;
    int ch=0;
    int nch=0;
    cout <<"size of the array:";
    cin >> size;
    int array[size];
    for (int i=0;i<size;i++) {
        array[i]= rand()%100;
        cout<<array[i]<<" ";
        if (array[i]%2==0){
            ch++;
        }
        else {
            nch++;
        }
    }
    cout<<"amount of even numbers:"<<ch<<endl;
    cout<<"amount of odd numbers:"<<nch<<endl;
}