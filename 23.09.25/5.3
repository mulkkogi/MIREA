#include <iostream>  
#include <ctime>  
#include <cstdlib>  
int main() {
    std::srand(time(0));
    int size;
    std::cout << "Size of the array:";  
    std::cin >> size;  
    int* array = new int[size];
    for(int i = 0; i < size; i++) {  
        array[i] = rand() % 100;   
        std::cout << array[i] << " ";  
    }  
    std::cout << std::endl; 
    int max = array[0];  
    int min = array[0];
    for(int i = 1; i < size; i++) {  
        if(array[i] > max) {  
            max = array[i];  
        }  
        if(array[i] < min) {  
            min = array[i];  
        }  
    } 
    std::cout <<"Max number: " << max << std::endl;  
    std::cout << "Min number: " << min << std::endl;  
} 