#include <iostream>
#include <ctime>
#include <cstdlib>
int main() {
    std::srand(time(0));
    int m;
    int sum = 0;
    std::cout << "Matrix size: ";
    std::cin >> m;
    int** arr = new int* [m];
    for (int i = 0; i < m; i++) {
        arr[i] = new int[m];
    }
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < m; j++) {
            arr[i][j] = std::rand() % 10;
            std::cout << arr[i][j] << " ";
            if (i == j) sum += arr[i][j];
        }
        std::cout << "\n";
    }
    std::cout<< "Sum of the diagonal: "<< sum;
}