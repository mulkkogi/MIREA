#include <iostream>
int main() {
    int N;
    std::cout << "N: ";
    std::cin >>N;
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (i + j < N - 1)
                std::cout<< 0;
            else 
            if (i + j == N - 1)
                std::cout<< 1;
            else
                std::cout << 2;
            if (j < N - 1) 
            std::cout << " ";
        }
        std::cout << "\n";
    }
}